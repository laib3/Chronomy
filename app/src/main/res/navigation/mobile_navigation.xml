<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_show_profile">

    <fragment
        android:id="@+id/nav_list"
        android:name="it.polito.mainactivity.ui.timeslot_list.TimeSlotListFragment"
        android:label="@string/menu_timeslot_list"
        tools:layout="@layout/fragment_timeslot_list" >
        <action
            android:id="@+id/action_nav_list_to_nav_details"
            app:destination="@id/nav_details" />
        <action
            android:id="@+id/action_nav_list_to_nav_edit"
            app:destination="@id/nav_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_details"
        android:name="it.polito.mainactivity.ui.timeslot_details.TimeSlotDetailsFragment"
        android:label="@string/menu_timeslot_details"
        tools:layout="@layout/fragment_timeslot_details" />

    <fragment
        android:id="@+id/nav_edit"
        android:name="it.polito.mainactivity.ui.timeslot_edit.TimeSlotEditFragment"
        android:label="@string/menu_timeslot_edit"
        tools:layout="@layout/fragment_timeslot_edit" />
    <fragment
        android:id="@+id/nav_edit_profile"
        android:name="it.polito.mainactivity.ui.userprofile.EditProfileFragment"
        android:label="EditProfileFragment" />
    <fragment
        android:id="@+id/nav_show_profile"
        android:name="it.polito.mainactivity.ui.userprofile.ShowProfileFragment"
        android:label="ShowProfileFragment" >
        <action
            android:id="@+id/action_nav_show_profile_to_nav_edit_profile"
            app:destination="@id/nav_edit_profile"
            app:launchSingleTop="false"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_nav_show_profile_to_nav_list"
            app:destination="@id/nav_list" />
    </fragment>
</navigation>