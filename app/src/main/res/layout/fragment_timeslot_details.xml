<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.timeslot_details.TimeSlotDetailsFragment">

    <TextView
        android:id="@+id/text_timeslot_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Timeslot details"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TitleTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:hint="Title"
        android:textColorHint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/text_timeslot_details"
        app:layout_constraintStart_toStartOf="@+id/text_timeslot_details"
        app:layout_constraintTop_toBottomOf="@+id/text_timeslot_details">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/DescriptionTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:hint="Description"
        android:textColorHint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/TitleTextField"
        app:layout_constraintStart_toStartOf="@+id/TitleTextField"
        app:layout_constraintTop_toBottomOf="@+id/TitleTextField">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/StartDateTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:hint="Start Date"
        android:textColorHint="@color/purple_500"
        app:layout_constraintEnd_toStartOf="@+id/EndDateTextField"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/DescriptionTextField"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionTextField"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_calendar"
        app:endIconContentDescription="Choose start date"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EndDateTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="End Date"
        android:textColorHint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/DescriptionTextField"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/StartDateTextField"
        app:layout_constraintTop_toTopOf="@+id/StartDateTextField"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_calendar"
        app:endIconContentDescription="Choose end date">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/DurationTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:hint="Duration"
        android:textColorHint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/EndDateTextField"
        app:layout_constraintStart_toStartOf="@+id/StartDateTextField"
        app:layout_constraintTop_toBottomOf="@+id/EndDateTextField"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_clock"
        app:endIconContentDescription="Choose duration of timeslot">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LocationTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:hint="Location"
        android:textColorHint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/DurationTextField"
        app:layout_constraintStart_toStartOf="@+id/DurationTextField"
        app:layout_constraintTop_toBottomOf="@+id/DurationTextField"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_location"
        app:endIconContentDescription="Choose the location">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/CategoryTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:hint="Category"
        android:textColorHint="@color/purple_500"
        app:endIconContentDescription="Choose the location"
        app:endIconDrawable="@drawable/ic_category"
        app:endIconMode="custom"
        app:layout_constraintEnd_toEndOf="@+id/DurationTextField"
        app:layout_constraintStart_toStartOf="@+id/DurationTextField"
        app:layout_constraintTop_toBottomOf="@+id/LocationTextField">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>