<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShowProfileActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_slate_blue</item>
        <item name="colorPrimaryVariant">@color/not_so_dark_slate_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- we need this in order to change the action bar background color in dark mode -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>

    <style name="HintText">
        <item name="android:textColorPrimary">@color/grey</item>
    </style>

    <style name="SkillCardEdit">
        <item name="android:background">@color/dark_slate_blue</item>
    </style>

    <style name="SkillCard">
        <item name="android:background">@color/light_yellow</item>
    </style>

</resources>